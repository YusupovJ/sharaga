generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  admin
  moderator
}

model user {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  login     String    @unique
  password  String
  token     String?
  role      UserRole  @default(moderator)

  dormitory dormitory?
  history   history[]
}

model students {
  id          Int        @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  fullName    String
  passport    String     @unique
  faculty     String
  roomNumber  String?
  job         String?
  
  dormitoryId Int?
  dormitory   dormitory? @relation(fields: [dormitoryId], references: [id])

  history     history[]
}

model dormitory {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String

  students  students[]

  userId    Int?       @unique
  user      user?      @relation(fields: [userId], references: [id])

  history   history[]
}

model history {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  userId      Int
  user        user      @relation(fields: [userId], references: [id])

  dormitoryId Int
  dormitory   dormitory @relation(fields: [dormitoryId], references: [id])

  studentId   Int
  student     students  @relation(fields: [studentId], references: [id])

  isPresent   Boolean
  date        DateTime  @default(now()) @db.Date

  @@unique([studentId, date])
}
